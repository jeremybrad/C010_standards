# pytest.ini.template
# Workspace-standard pytest configuration for SyncedProjects
# Copy to project root and customize paths as needed
#
# Usage:
#   cp /path/to/C010_standards/policy/testing/pytest.ini.template pytest.ini
#   # Then adjust testpaths and source coverage path
#
# Standard markers across all projects:
#   @pytest.mark.unit        - Fast, no I/O
#   @pytest.mark.integration - End-to-end with I/O
#   @pytest.mark.slow        - Takes > 1 second
#   @pytest.mark.network     - Requires network access
#   @pytest.mark.smoke       - Quick sanity checks

[pytest]
# Test discovery - adjust path for Betty Protocol structure
# Options: tests/, 90_tests/, 40_src/tests/
testpaths = tests
python_files = test_*.py
python_classes = Test*
python_functions = test_*

# Default options for all test runs
addopts =
    -v
    --strict-markers
    --disable-warnings
    --cov=40_src
    --cov-report=term-missing
    --cov-report=html
    --cov-fail-under=70
    -ra
    --tb=short
    --maxfail=10

# Custom markers for test organization (workspace-standard)
markers =
    unit: Unit tests for individual components (fast, no I/O)
    integration: End-to-end integration tests (slower, with I/O)
    slow: Tests that take > 1 second to run
    network: Tests that require network access (APIs, Ollama, etc.)
    requires_ollama: Tests that need a running Ollama instance
    creates_files: Tests that create files on disk
    smoke: Quick smoke tests for basic functionality

# Minimum Python version
minversion = 3.11

# Test discovery exclusions
norecursedirs =
    .git
    .tox
    .venv
    venv
    *-env
    node_modules
    dist
    build
    *.egg
    htmlcov
    logs
    out
    90_archive
    Archive

# Coverage configuration
[coverage:run]
source = 40_src
omit =
    */tests/*
    */90_tests/*
    */test_*.py
    */__pycache__/*
    */conftest.py
    */.venv/*

[coverage:report]
precision = 2
show_missing = True
skip_covered = False
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:

[coverage:html]
directory = htmlcov
